<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 http://mojo.codehaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd">
  <ignoreVersions>
    <!-- date stamp 200x instead of version number, does not follow numbering rules, we shouldn't care about updates before 2010    -->
    <ignoreVersion type="regex">200.*</ignoreVersion>
    <!-- Ignore versions that are stubbed to ignore with 'does not exist' -->
    <ignoreVersion type="regex">.*-does-not-exist</ignoreVersion>
    <!-- Ignore alpha release versions -->
    <ignoreVersion type="regex">.*[Aa][Ll][Pp][Hh][Aa].*</ignoreVersion>
    <!-- Ignore beta release versions -->
    <ignoreVersion type="regex">.*[-\.][Bb][Ee][Tt][Aa].*</ignoreVersion>
    <!-- Ignore milestone release versions -->
    <ignoreVersion type="regex">.*[-\.]M.*</ignoreVersion>
    <!-- Ignore candidate release versions -->
    <ignoreVersion type="regex">.*[-\.][Cc][Rr].*</ignoreVersion>
    <!-- Ignore release candidate versions -->
    <ignoreVersion type="regex">.*[-\.][Rr][Cc].*</ignoreVersion>
    <!-- Ignore jboss branded release versions -->
    <ignoreVersion type="regex">.*[-\.]jboss.*</ignoreVersion>
    <!-- CXF 3.x has 'milestone' -->
    <ignoreVersion type="regex">.*[-\.]milestone.*</ignoreVersion>
  </ignoreVersions>
  <rules>
    <!-- See http://swordsystems.com/2011/06/29/xerces-and-xml-api-dependency-hell v2.0 is OLDER than v 1.0 -->
    <rule groupId="xml-apis" artifactId="xml-apis" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">2.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Jetty v9 and > 8.1.8 requires JDK7, can't configure jetty port from v9 maven plugin -->
    <rule groupId="org.eclipse.jetty" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">9.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Major API changes, can't upgrade plugins which use maven v3 yet -->
    <rule groupId="org.apache.maven" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">3.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Sun created additional releases with -identifier -->
    <rule groupId="javax.servlet.jsp" artifactId="jsp-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="exact">2.2.1</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Bad hibernate release version -->
    <rule groupId="org.hibernate" artifactId="hibernate-commons-annotations" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="exact">3.3.0.ga</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Don't know why 1.6.1-brew shows up as an update to v1.6.1 -->
    <rule groupId="dom4j" artifactId="dom4j" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-brew</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- NullPointerException from this version, fixed in local 2.12-SNAPSHOT -->
    <rule groupId="org.apache.maven.plugins" artifactId="maven-checkstyle-plugin" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="exact">2.11</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jboss" comparisonMethod="maven">
      <ignoreVersions>
        <!-- Exists only in internal 3rd party repository -->
        <ignoreVersion type="exact">4.3.0.GA</ignoreVersion>
        <!-- Exists only in jboss repository, not in sonatype or maven central -->
        <ignoreVersion type="exact">4.2.3.GA</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Somebody published v3.x of JavaFoundation Shared -->
    <rule groupId="com.disney.shared" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">3.*</ignoreVersion>
      </ignoreVersions>
    </rule>
  </rules>
</ruleset>